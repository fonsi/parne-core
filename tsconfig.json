{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDir": "src/",
    "types": [
      "node",
      "jest"
    ],
    "declaration": true,
    "outDir": "lib/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  }
}